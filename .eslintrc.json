{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "standard"
  ],
  "ignorePatterns": ["client/", "node_modules/"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "class-methods-use-this": "off",
    "import/no-unresolved": "off",
    "comma-dangle": ["error", "never"]
  },
  "settings": {
    "import/resolver": {
      "alias": [
        ["^", "./"]
      ]
    }
  }
}
